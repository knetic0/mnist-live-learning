{
    "version": 2,
    "builds": [
      {
        "src": "dist/bundle.js",
        "use": "@vercel/node"
      },
      {
        "src": "dist/public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/public/(.*)", "dest": "/dist/public/$1" },
      { "src": "/(.*)",       "dest": "/dist/bundle.js" }
    ]
  }
  