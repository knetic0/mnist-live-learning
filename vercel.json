{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/train", "methods": ["POST"], "dest": "index.js" },
      { "src": "/predict", "methods": ["POST"], "dest": "index.js" },
      { "src": "/", "dest": "index.js" },
      { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }